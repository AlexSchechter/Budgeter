@model Budgeter.Models.Transaction
<div class="widget budgeter-form">
    <div class="widget-header clearfix">
        <h3><i class="icon ion-compose"></i></h3>
    </div>
    <div class="widget-content">
        <h3 class="text-danger">Are you sure you want to delete this Transaction? This action cannot be undone.</h3>
        @using (Html.BeginForm("Delete", "Transactions", new { transactionId = Model.Id }, FormMethod.Post, new { @class = "form-horizontal partial-form", role = "form" }))
        {
            <div class="form-group">
                @Html.AntiForgeryToken()
                <div class="col-xs-6">
                    <input type="submit" name="submitButton" value="Delete" class="btn btn-success btn-block" />
                </div>
                <div class="col-xs-6">
                    @Html.ActionLink("Back to List", "Index", "Transactions", new { householdAccountId = Model.HouseholdAccountId}, new { @class = "btn btn-danger btn-block" })
                </div>
            </div>
        }
    </div>
</div>
