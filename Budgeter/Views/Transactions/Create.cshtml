@model Budgeter.Models.Transaction

<div class="container-fluid primary-content">
    <br />
    <div class="widget">
        <div class="widget-header clearfix">
            <h3><i class="icon ion-compose"></i> <span>Enter New Transaction</span></h3>        
        </div>
        <div class="widget-content">
            <i class="h5 text-danger warning-transaction">Please enter expenditure as a negative number and income as a positive number.</i>
            <br />
            @using (Html.BeginForm("Create", "Transactions", FormMethod.Post, new { @class = "form-horizontal partial-form", @role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.HouseholdAccountId)
                    <div class="form-group">
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })                        
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Reconciled Amount", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ReconciledAmount, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Category", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @*@Html.DropDownListFor(model => model.CategoryId, (SelectList)ViewBag.CategoryId, null, htmlAttributes: new { @class = "form-control" })*@
                            @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Reconciled, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="checkbox checkbox-form">
                                @Html.EditorFor(model => model.Reconciled)
                            </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary btn-md btn-demo" data-assigned-id = @User.Identity.Name />
                        @Html.ActionLink("Cancel", "Index", "Transactions", new { householdAccountId = Model.HouseholdAccountId }, new { @class = "btn btn-warning btn-md" })
                    </div>
                </div>
            }
            <div class="h4 text-danger demo-text" hidden>This functionality is disabled in the demo account. Please log in for full functionality.</div>
        </div>
    </div>
</div>