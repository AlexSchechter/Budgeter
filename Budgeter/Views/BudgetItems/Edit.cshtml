@model Budgeter.Models.BudgetItem

<div class="container-fluid primary-content">
    <br />
    <div class="widget">
        <div class="widget-header clearfix">
            <h3><i class="icon ion-compose"></i> <span>Edit "@Model.Description" Budget Item</span></h3>
        </div>
        <div class="widget-content">
            @using (Html.BeginForm("Edit", "BudgetItems", FormMethod.Post, new { @class = "form-horizontal partial-form", @role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                <div class="form-group">
                    @Html.LabelFor(model => model.CategoryId, "Change Category", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.BudgetId, "Move Item to a Different Budget", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("BudgetId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BudgetId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Change Budget Item Amount</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Change Description</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary btn-md btn-demo" data-assigned-id = @User.Identity.Name />
                    @Html.ActionLink("Back", "Details", "Budgets", new { budgetId = Model.BudgetId }, new { @class = "btn btn-warning btn-md" })
                </div>
            }
            <div class="h4 text-danger demo-text" hidden>This functionality is disabled in the demo account. Please log in for full functionality.</div>
        </div>
    </div>
</div>