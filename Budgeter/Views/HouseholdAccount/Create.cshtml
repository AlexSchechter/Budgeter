@model Budgeter.Models.HouseholdAccount

@{
    Layout = "";
}

<div class="create-account-form">
    @using (Html.BeginForm("Create", "HouseholdAccount", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="input-group">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Account Name" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                <span class="input-group-btn"><button class="btn btn-success" type="submit"><span class="icon ion-compose"> Create New Account</span></button></span>
            </div>
        </div>
    }
</div>