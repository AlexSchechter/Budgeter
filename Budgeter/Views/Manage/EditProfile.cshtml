@model Budgeter.Models.Profile
@{
    ViewBag.Title = "Edit Profile";
    Layout = "";
}

<div id="edit-profile-section" class="widget" hidden>
    <div class="widget-header clearfix">
        <h3><i class="icon ion-compose"></i> <span>@ViewBag.Title</span></h3>
        <div class="btn-group widget-header-toolbar">
            <a href="#" title="Expand/Collapse" class="btn btn-link btn-toggle-expand"><i class="icon ion-ios-arrow-up"></i></a>
        </div>
    </div>
    <div class="widget-content">
        @using (Html.BeginForm("EditProfile", "Manage", FormMethod.Post, new { @class = "form-horizontal partial-form", role = "form" }))
            {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Username, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                </div>
            </div>
            @Html.HiddenFor(m => m.Email)
            @*<div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>*@
            <div class="form-group">
                @Html.LabelFor(m => m.FirstName, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.LastName, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-success btn-block btn-demo" data-assigned-id = @User.Identity.Name value="Save Changes" />
            </div>
        }
        <div class="h4 text-danger demo-text" hidden>This functionality is disabled in the demo account. Please log in for full functionality.</div>
    </div>
</div>