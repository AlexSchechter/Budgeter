@model Budgeter.Models.CategoryViewModel

<div class="h2">Index of Categories</div>
<div class="h5 text-info">Please note that only Categories that contain no transactinons can be deleted</div>
<br />

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.CategoryItems.Name)*@
        </th>
        <th>
            Transactions
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.CategoryItems) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @item.TransactionCount
        </td>
        <td>
            @if (item.TransactionCount == 0)
            {
                @Html.ActionLink("Delete", "Delete", new { categoryId = item.Category.Id });
            }
        </td>
    </tr>
}

</table>
